<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- 指定包名, 禁用懒加载 -->
<hibernate-mapping auto-import="true" default-lazy="false"
                   package="qin.javaee8.hibernate.domain">

    <!-- 故乡实体类 -->
    <class name="Country" table="tongange_country8">
        <id name="id" column="country_id" type="java.lang.Long">
            <generator class="increment"/>
        </id>

        <property name="country_name" not-null="true" length="100"/>

        <set name="userSet" cascade="delete">
            <key not-null="true" column="country_user_id"/>
            <one-to-many class="User"/>
        </set>
    </class>

    <!-- 用户实体类 -->
    <class name="User" table="tongange_user8">
        <id name="id" column="user_id" type="java.lang.Integer">
            <generator class="increment"/>
        </id>

        <!-- 姓名第一个名称 -->
        <property name="user_firstName" length="20" not-null="true"/>

        <!-- 姓名末尾 -->
        <property name="user_lastName" length="30"/>

        <!-- 登录名/用户名 -->
        <property name="user_loginName" length="20" not-null="true"/>

        <!-- 邮箱 -->
        <property name="user_email" length="300" not-null="true"/>

        <!-- 密码 -->
        <property name="user_password" length="20" not-null="true"/>

        <!-- 国家 -->
        <many-to-one name="user_country" not-null="true" class="Country" cascade="delete"/>

        <!-- 出生年月 -->
        <property name="user_birthdate" not-null="true" type="java.util.Date"/>

        <!-- 性别 -->
        <property name="user_gender" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">qin.javaee8.hibernate.domain.Gender</param>
                <param name="type">12</param>
            </type>
        </property>

        <!-- 联系方式 -->
        <property name="user_phoneNumber" length="20" not-null="true"/>

        <!-- 描述 -->
        <property name="user_description" length="3000"/>

        <!-- 用户类型 -->
        <many-to-one name="userType" column="user2userType" class="UserType" cascade="delete"/>

    </class>

    <!-- 用户类型实体类 -->
    <class name="UserType" table="tongange_userType8">
        <id name="id" column="user_id" type="string">
            <generator class="uuid"/>
        </id>

        <property name="user_type_name" length="10" not-null="true"/>

        <set name="userSet" cascade="delete">
            <key column="user_type_id"/>
            <one-to-many class="User"/>
        </set>
    </class>

</hibernate-mapping>
















